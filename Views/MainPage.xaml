    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:SelectedItemEventArgsConverter x:Key="SelectedItemEventArgsConverter" />
            <Converters:CheckBoxConverter x:Key="CheckBoxConverter" />
            <Style TargetType="Label" Class="Check_labels">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <NavigationPage.TitleView >
     
        <FlexLayout 

            Margin="0,0,15,0"
            Padding="0"
            Direction="Row"
            AlignItems="Center"
            JustifyContent="SpaceBetween"
            >
            <Label
            Text="LOGO"
            FontSize="Title"
            TextColor="White"
            />
            <Label
            Text="Hlavní Stránka"
            FontSize="Title"
            TextColor="White"
            />

            <ImageButton Source="loginicon.svg"
                         MaximumHeightRequest="50" MaximumWidthRequest="50"
                        Command="{Binding NavigateCommand}"
                       />
            <!--CommandParameter="{x:Reference MainPageView}"
            Clicked="GoToLogin"-->
        </FlexLayout>
  
    </NavigationPage.TitleView>



    <Grid Margin="0,10,0,0"
          RowDefinitions="50,Auto,30,*"
          ColumnDefinitions="*">
        <FlexLayout 
            Grid.Row="0"
            Margin="10,0,10,10"
            Padding="0"
            Direction="Row"
            AlignItems="Center"
            JustifyContent="SpaceBetween"
            >
            <Label
            Text="LOGO"
            FontSize="Title"
            TextColor="White"
            />
            <Label
            Text="Hlavní Stránka"
            FontSize="Title"
            TextColor="White"
            />

            <ImageButton Source="loginicon.png"
                         MaximumHeightRequest="50" MaximumWidthRequest="50"
                        Command="{Binding NavigateCommand}"
                       />
            <!--CommandParameter="{x:Reference MainPageView}"
            Clicked="GoToLogin"-->
        </FlexLayout>
        <Border Margin="10,0,10,0"
               Background="White"
                StrokeShape="RoundRectangle 40"
                Grid.Row="1">
            <SearchBar Placeholder="Search items" 
                       x:Name="searchBar"
                       Text="{Binding SearchText}"
                       FontSize="Title">
                <SearchBar.Behaviors>
                    <toolkit:EventToCommandBehavior
                EventName="TextChanged"
               Command="{Binding PerformSearch}"
               CommandParameter="{Binding Text,Source={x:Reference searchBar}}" />
                </SearchBar.Behaviors>
            </SearchBar>
        </Border>
